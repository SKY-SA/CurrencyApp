<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ConvertActivity">

        <TextView
            android:id="@+id/convertActivity_FromTextView"
            android:layout_width="87dp"
            android:layout_height="38dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="19dp"
            android:gravity="end"
            android:text="From"
            android:textColor="#DAAA1212"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/convertActivity_ToTextView"
            app:layout_constraintEnd_toStartOf="@+id/convertActivity_FromSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/convertActivity_ToTextView"
            android:layout_width="84dp"
            android:layout_height="42dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="12dp"
            android:gravity="end"
            android:text="To"
            android:textColor="#DAAA1212"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/convertActivity_AmountTextView"
            app:layout_constraintEnd_toStartOf="@+id/convertActivity_ToSpinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/convertActivity_FromTextView" />

        <TextView
            android:id="@+id/convertActivity_AmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="316dp"
            android:text="Amount"
            android:textColor="#DAAA1212"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/convertActivity_AmountEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/convertActivity_ToTextView" />

        <Spinner
            android:id="@+id/convertActivity_FromSpinner"
            android:layout_width="156dp"
            android:layout_height="41dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/convertActivity_ToSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/convertActivity_FromTextView"
            app:layout_constraintTop_toTopOf="parent"></Spinner>

        <Spinner
            android:id="@+id/convertActivity_ToSpinner"
            android:layout_width="171dp"
            android:layout_height="34dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/convertActivity_AmountEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/convertActivity_ToTextView"
            app:layout_constraintTop_toBottomOf="@+id/convertActivity_FromSpinner"></Spinner>

        <EditText
            android:id="@+id/convertActivity_AmountEditText"
            android:layout_width="164dp"
            android:layout_height="0dp"
            android:layout_marginTop="258dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="53dp"
            android:ems="10"
            app:layout_constraintBottom_toTopOf="@+id/convertActivity_CalculationButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/convertActivity_AmountTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/convertActivity_CalculationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="209dp"
            android:onClick="calcullation"
            android:text="calculation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/convertActivity_AmountEditText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>