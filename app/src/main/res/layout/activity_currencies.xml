<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CurrenciesActivity"
        android:background="@drawable/background_screen">
        <LinearLayout
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:text="Name"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="#680909"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:padding="2dp"
                android:text="Code"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="#680909"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:padding="2dp"
                android:text="Decimal"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="#680909"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:padding="2dp"
                android:text="Favorite"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_weight="1"
                android:textColor="#680909"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/currenciesActivity_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/a">
            <TextView
                android:id="@+id/currenciesActivity_currencyNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:text="name"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/currenciesActivity_currencyCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:padding="2dp"
                android:text="Code"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/currenciesActivity_decimalUnitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:padding="2dp"
                android:text="Decimal"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/currenciesActivity_checkboxFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:onClick="onCheckBoxClicked"
                android:buttonTint="@color/black"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/currenciesActivity_recyclerView"
            android:layout_width="413dp"
            android:layout_height="479dp"
            android:layout_below="@+id/currenciesActivity_linearLayout"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>
</layout>