<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:id="@+id/currenciesRecyclerRow_currencyNameTextView"
            android:layout_width="0dp"
            android:minWidth="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:text="name"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/currenciesRecyclerRow_currencyCodetextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:text="Code"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/currenciesRecyclerRow_decimalUnitiestextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:padding="2dp"
            android:text="Decimal"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/currenciesRecyclerRow_checkboxFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite"
            android:layout_weight="1"
            android:onClick="onCheckBoxClicked"
            />


    </LinearLayout>
</layout>